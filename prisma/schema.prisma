generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id    String     @id @default(uuid())
  name  String
  slots TimeSlot[]
}

model TimeSlot {
  id        String        @id @default(uuid())
  time      DateTime
  status    BookingStatus
  patientId String?
  doctor    Doctor        @relation(fields: [doctorId], references: [id])
  doctorId  String
  expiresAt DateTime?
}

enum BookingStatus {
  FREE
  PREBOOKED
  BOOKED
}
